@model SV20T1080048.DomainModels.Booking
@{
    var userData = User.GetUserData();
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Đăng Ký Dịch Vụ</h2>
    <div class="card shadow-lg p-4">
        <form id="bookingForm" method="post" action="~/DichVu/AddBookService">
            <div class="form-group">
                <label for="serviceName" class="font-weight-bold">Tên dịch vụ</label>
                <input type="text" class="form-control" id="serviceName" name="ServiceName" value="@Model.ServiceName" readonly>
            </div>
            <div class="form-group">
                <label for="appointmentDate" class="font-weight-bold">Chọn ngày hẹn</label>
                <input type="date" class="form-control" id="appointmentDate" name="AppointmentDate" required>
            </div>
            <div class="form-group">
                <label for="appointmentTime" class="font-weight-bold">Chọn thời gian hẹn</label>
                <input type="time" class="form-control" id="appointmentTime" name="AppointmentTime" required>
            </div>
            <div class="form-group">
                <label for="notes" class="font-weight-bold">Ghi chú</label>
                <textarea class="form-control" id="notes" name="Notes" rows="4"></textarea>
            </div>
            <input type="hidden" id="customerID" name="CustomerID" value="@userData.UserId">
            <input type="hidden" id="serviceID" name="ServiceID" value="@Model.ServiceID">
            <button type="submit" class="btn btn-primary btn-block font-weight-bold">Đặt lịch ngay</button>
        </form>
    </div>
</div>