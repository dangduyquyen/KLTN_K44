@model SV20T1080048.Web.Models.PaginationSearchOrder
@{

}
<div class="container">
    <div class="main-body">

        @{
            var userData = User.GetUserData();
            if (userData != null)
            {

                <div class="row gutters-sm">
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="me-3">
                                        <img src="~/images/@userData.Photo" height="100px" width="100px">
                                    </div>
                                    <div>
                                        <h5>Chào @userData.DisplayName</h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card mt-3">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                    <a id="nav_Mng_Acc" href="~/TaiKhoan">
                                        Quản lý Tài khoản
                                    </a>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                    <a id="nav_Mng_Acc" href="~/TaiKhoan/QuanLyTaiKhoan/@userData.UserId">
                                        Thông tin tài khoản
                                    </a>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                    <a id="nav_Mng_Acc" href="~/TaiKhoan/QuanLyDonHang">
                                        Đơn hàng của tôi
                                    </a>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                    <a id="nav_Mng_Acc" href="~/TaiKhoan/QuanLyLichHen">
                                        Lịch hẹn của tôi
                                    </a>
                                </li>

                            </ul>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="card mb-3">
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover table-striped">
                                    <thead>
                                        <tr class="bg-primary">
                                            <th>Khách hàng</th>
                                            <th>Ngày đặt hàng</th>
                                            <th>Thời điểm duyệt</th>
                                            <th>ngày nhận giao hàng</th>
                                            <th>Trạng thái</th>
                                            <th style="width:40px"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Data)
                                        {
                                            <tr>
                                                <td>@item.CustomerName</td>
                                                <td>@string.Format("{0:dd/MM/yyyy HH:mm}", item.OrderTime)</td>
                                                <td>@string.Format("{0:dd/MM/yyyy HH:mm}", item.AcceptTime)</td>
                                                <td>@string.Format("{0:dd/MM/yyyy HH:mm}", item.ShippedTime)</td>
                                                <td>@item.StatusDescription</td>
                                                <td>
                                                    <a href="~/TaiKhoan/Details/@item.OrderID" class="btn btn-info btn-xs">
                                                        <i class="glyphicon glyphicon-th-list"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
