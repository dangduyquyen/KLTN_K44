
@{

}
<div class="container">
    <div class="main-body">

        @{
            var userData = User.GetUserData();
            if (userData != null)
            {

                <div class="row gutters-sm">
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div class="me-3">
                                        <img src="~/images/@userData.Photo" height="100px" width="100px">
                                    </div>
                                    <div>
                                        <h5>Chào @userData.DisplayName</h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card mt-3">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                    <a id="nav_Mng_Acc" href="~/TaiKhoan">
                                        Quản lý Tài khoản
                                    </a>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                    <a id="nav_Mng_Acc" href="~/TaiKhoan/QuanLyTaiKhoan/@userData.UserId">
                                        Thông tin tài khoản
                                    </a>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                    <a id="nav_Mng_Acc" href="~/TaiKhoan/QuanLyDonHang/@userData.UserId">
                                        Đơn hàng của tôi
                                    </a>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                    <a id="nav_Mng_Acc" href="~/TaiKhoan/QuanLyLichHen/@userData.UserId">
                                        Lịch hẹn của tôi
                                    </a>
                                </li>

                            </ul>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="card mb-3">
                            <div class="card-body">
                                <table class="table table-bordered">
                                    <tbody>
                                        <tr>
                                            <td>Họ tên</td>
                                            <td>@userData.DisplayName</td>
                                        </tr>
                                        <tr>
                                            <td>Email</td>
                                            <td>@userData.Email</td>
                                        </tr>
                                    </tbody>
                                </table>
                                <div class="row">
                                    <div class="col-sm-2">
                                        <a class="btn btn-info " target="__blank" href="~/UserAccount/Logout">Đăng xuất</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
