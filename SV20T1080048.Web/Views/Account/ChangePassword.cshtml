@{
    @using SV20T1080048.Web;
    Layout = null;
}

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 2 | Log in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/themes/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/themes/bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/themes/bower_components/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/themes/dist/css/AdminLTE.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/themes/plugins/iCheck/square/blue.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
@{
    var userData = User.GetUserData();
    if (userData != null)
    {
        <div class="box box-primary">
            <div class="box-body">
                <div class="container">
                    <form class="form-horizontal" action="~/Account/ChangePassword" method="post">

                        <div class="form-group">
                            <label class="control-label col-sm-2" for="hoVaTen">Họ và tên:</label>
                            <div class="col-sm-10">
                                <p class="form-control-static" style="border: 1px dotted #646464; padding-left:15px">@userData.DisplayName</p>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-2" for="">Email:</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="userName" value="@userData.UserName" name="userName">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-2">Mật khẩu mới:</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" id="email" placeholder="" name="newPassword">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-danger"> <i class="glyphicon glyphicon-trash"></i>  Đổi mật khẩu</button>
                                <a href="~/Admin/" class="btn btn-flat btn-default"> Quay lại</a>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    }
}