@model SV20T1080048.DomainModels.Service;
@using SV20T1080048.Web;
@{

}

<div class="box box-primary">

    <div class="box-header with-border ">
        <h3 class="box-title">Thông tin dịch vụ</h3>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>

    <div class="box-body">
        <form class="form-horizontal" method="post" enctype="multipart/form-data" action="~/Admin/Service/Save">

            @Html.HiddenFor(m => m.ServiceID)

            <div class="form-group">
                <label class="control-label col-sm-2">Tên dịch vụ:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.ServiceName, new { @class="form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Description, new { @class="form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Loại dịch vụ:</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(m => m.CategoryServiceID, SelectListHelper.categoryService(), new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Giá:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Price, new { @class="form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Giá theo gói:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.PriceForCombo, new { @class="form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh minh họa:</label>
                <div class="col-sm-10">
                    <input hidden value="@Model.Photo" />
                    <input type="file" class="form-control" name="uploadPhoto" value="@Model.Photo"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <img id="Photo" src="~/images/service/@Model.Photo" style="width:150px" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-warning" href="~/Admin/Service">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>

    </div>

</div>



