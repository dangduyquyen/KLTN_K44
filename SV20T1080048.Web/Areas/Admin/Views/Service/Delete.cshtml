@model SV20T1080048.DomainModels.Service
@{
    ViewBag.Title = "Xóa dịch vụ";
}

<div class="box box-primary">
    <div class="box-header with-border ">
    </div>
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-warning">
            <p>@ViewBag.ErrorMessage</p>
        </div>
    }
    <div class="box-body">
        <form class="form-horizontal" action="~/Admin/Service/Delete/@Model.ServiceID" method="post">
            @Html.HiddenFor(m => m.ServiceID)

            <div class="form-group">
                <label class="control-label col-sm-2">Tên dịch vụ:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.ServiceName, new { @class="form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Description, new { @class="form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Loại dịch vụ:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.CategoryServiceID, new { @class="form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Giá:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Price, new { @class="form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Giá theo gói:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.PriceForCombo, new { @class="form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh minh họa:</label>
                <div class="col-sm-10">
                    <input hidden value="@Model.Photo" />
                    <input type="file" class="form-control" name="uploadPhoto"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <img id="Photo" src="~/images/service/@Model.Photo" style="width:150px" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash"></i> Xóa mặt hàng
                    </button>
                    <a class="btn btn-warning" href="~/Admin/Product">
                        <i class="fa"></i> Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer text-center">
    </div>

</div>

