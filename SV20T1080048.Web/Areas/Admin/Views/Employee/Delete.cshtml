@model SV20T1080048.DomainModels.Employee;
@{
    ViewBag.Title = "Xóa nhân viên";
}


<div class="box box-primary">
    <div class="box-body">
        <div class="container">
            <form class="form-horizontal" action="~/Admin/Employee/Delete/@Model.EmployeeID" method="post">
                <div class="form-group">
                    <label class="control-label col-sm-2" for="">Họ và tên:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static" style="border: 1px dotted #646464; padding-left:15px">@Model.FullName</p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="">Ngày sinh:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static" style="border: 1px dotted #646464; padding-left:15px">@Model.BirthDate</p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="">Địa chỉ:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static" style="border: 1px dotted #646464; padding-left:15px">@Model.Address</p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="">Điện thoại:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static" style="border: 1px dotted #646464; padding-left:15px">@Model.Phone</p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="email">Email:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static" style="border: 1px dotted #646464; padding-left:15px">@Model.Email</p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="">Trạng thái:</label>
                    <div class="col-sm-10">
                        <p class="form-control-static" style="border: 1px dotted #646464; padding-left:15px">Đang làm việc</p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="">Ảnh cá nhân:</label>
                    <div class="col-sm-10">
                        <img style="margin-top:15px" src="~/images/employees/avt_employee.jpg " class="img-rounded" alt="Cinque Terre" width="180" height="180">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-danger"> <i class="fa fa-floppy-o"></i> Xóa nhân viên</button>
                        <a href="~/Admin/Employee" class="btn btn-flat btn-default"> Quay lại</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
