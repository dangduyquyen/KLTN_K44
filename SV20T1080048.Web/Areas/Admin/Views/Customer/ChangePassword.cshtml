
@{
    ViewBag.Title = "Thay đổi mật khẩu";
}

<div class="box box-primary">
    <div class="box-body">

        <form action="#">
            <div class="form-group">
                <label for="email">Nhập mật khẩu cũ:</label>
                <input type="password" class="form-control" autofocus>
            </div>

            <div class="form-group">
                <label for="email">Nhập mật khẩu mới:</label>
                <input type="password" class="form-control">
            </div>

            <div class="form-group">
                <label for="email">Xác nhận mật khẩu mới:</label>
                <input type="password" class="form-control">
            </div>
            <div class="form-group">
                <input type="checkbox" id="agree" name="agree">
                <label for="agree">Tôi đồng ý thay đổi</label>
            </div>
            <button type="submit" class="btn btn-primary"> <i class="fa fa-floppy-o"></i> Lưu dữ liệu</button>

            <a href="~/Admin" class="btn btn-flat btn-default"> Quay lại</a>
        </form>
    </div>
</div>

