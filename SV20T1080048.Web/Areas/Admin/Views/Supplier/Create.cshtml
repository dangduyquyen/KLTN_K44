@model SV20T1080048.DomainModels.Supplier;
@using SV20T1080048.Web;
@{
    //
}

<div class="box box-primary">
    <div class="box-body">
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-warning">
                <p>@ViewBag.ErrorMessage</p>
            </div>
        }
        <form action="~/Admin/Supplier/Save" method="post">
            @Html.HiddenFor(n=>n.SupplierID)
            <div class="form-group">
                <label for="">Tên nhà cung cấp:</label>
                @Html.TextBoxFor(m => m.SupplierName, new{@class = "form-control", @autofocus = "autofocus"})
                @Html.ValidationMessageFor(m => m.SupplierName,"", new{@style="color:#f00"})
            </div>

            <div class="form-group">
                <label>Tên giao dịch:</label>
                @Html.TextBoxFor(m => m.ContactName, new{ @class = "form-control"})
                @Html.ValidationMessageFor(m => m.ContactName,"", new{@style="color:#f00"})
            </div>

            <div class="form-group">
                <label>Tỉnh thành:</label>
                @Html.DropDownListFor(m=>m.Province, SelectListHelper.Province(), new{@class="form-control"})
                @Html.ValidationMessageFor(m => m.Province,"", new{@style="color:#f00"})
                @* <select class="form-control" name="Province">
                    <option value="">-- Chọn tỉnh/thành</option>
                    @foreach (var item in SV20T1080048.BusinessLayers.CommonDataService.ListOfProvinces())
                    {
                        if (item.ProvinceName == Model.Province)
                        {
                            <option value="@item.ProvinceName" selected>@item.ProvinceName</option>
                        }
                        else
                        {
                            <option value="@item.ProvinceName">@item.ProvinceName</option>
                        }
                    }
                </select> *@
            </div>

            <div class="form-group">
                <label>Địa chỉ:</label>
                @Html.TextBoxFor(m => m.Address, new{@class = "form-control"})
                @Html.ValidationMessageFor( m => m.Address,"", new{@style="color:#f00"})
            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                @Html.TextBoxFor(m => m.Phone, new{@class = "form-control"})
                @Html.ValidationMessageFor( m => m.Phone,"", new{@style="color:#f00"})
            </div>

            <div class="form-group">
                <label>Email:</label>
                @Html.TextBoxFor(m => m.Email, new{@class = "form-control"})
                @Html.ValidationMessageFor(m => m.Email,"", new{@style="color:#f00"})
            </div>
            <button type="submit" class="btn btn-primary"> <i class="fa fa-floppy-o"></i> Lưu dữ liệu</button>

            <a href="~/Admin" class="btn btn-flat btn-default"> Quay lại</a>
        </form>
    </div>
</div>

