@model SV20T1080048.DomainModels.Shipper;
@{
    
}

<div class="box box-primary">
    <div class="box-body">
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-warning">
                <p>@ViewBag.ErrorMessage</p>
            </div>
        }
        <form action="~/Admin/Shipper/Save" method="post">
            <input type="hidden" name="ShipperId" value="@Model.ShipperId" />
            <div class="form-group">
                <label for="email">Tên người vận chuyển:</label>
                @Html.TextBoxFor(m => m.ShipperName, new{@class = "form-control"})
                @Html.ValidationMessageFor(m => m.ShipperName, "", new{@style = "color:#f00"})
                
            </div>

            <div class="form-group">
                <label for="email">Số điện thoại:</label>
                @Html.TextBoxFor(m => m.Phone, new{@class = "form-control"})
                @Html.ValidationMessageFor(m => m.Phone, "", new{@style = "color:#f00"})
            </div>

            <button type="submit" class="btn btn-primary"> <i class="fa fa-floppy-o"></i> Lưu dữ liệu</button>
            <a href="~/Admin/Shipper" class="btn btn-flat btn-default"> Quay lại</a>
        </form>
    </div>
</div>

